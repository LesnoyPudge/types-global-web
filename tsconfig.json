{
    "include": [
        "test.ts",
        "node_modules/@types"
    ],
    "compilerOptions": {
        "pretty": true,
        "explainFiles": false,
        "baseUrl": ".",
        "paths": {},

        "types": [
            "./src/index.d.ts"
        ],

        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "auto",

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true,

        "noEmit": true,
        "outDir": "build",
        "sourceMap": true,
        "declaration": true,

        // "moduleResolution": "NodeNext",
        // "module": "NodeNext",

        "moduleResolution": "Bundler",
        "module": "ESNext",

        "lib": [
            "ES2022",
            "DOM",
            // "DOM.Iterable"
        ],
    }
}